
Page de création des recettes pour admin

=> title
=> description 
=> ingredients

<%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre de la recette' %>
      <%= text_field_tag 'title', @title %>
      <br /> <br />

      <%= label_tag 'Description recette' %>
      <%= text_area_tag 'description', @description %>
      <br /> <br />

      <%= label_tag 'Ingrédients recette' %>
      <%= text_area_tag 'ingredients', @ingredients %>
      <br /> <br />

      <%= submit_tag "Créer la recette" %>

    <% end %>